    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@sendgrid/mail": "^7.7.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/mongoose": "^5.11.97",
    "@types/multer-s3": "^3.0.3",
