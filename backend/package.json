  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=test nest start",
    "start-local": "cross-env nest start",
    "start:debug": "cross-env NODE_ENV=test nest start --debug --watch",
