    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:allUnits": "cross-env NODE_ENV=test jest --maxWorkers=1 --verbose",
    "test:e2e:todolist": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json --testPathPattern=todolist.e2e-spec.ts --testTimeout=15000"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
